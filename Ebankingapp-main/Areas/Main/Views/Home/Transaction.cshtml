
@model MigrationHelper.ViewModels.TransactionViewModel
@{ 
   Layout = "~/Areas/Main/Views/Shared/_Layout.cshtml";
   var currencyData = (SelectList)ViewData["CurrencyData"]; 
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form class="mx-1 mx-md-4" asp-action="Transaction" method="post">
<div class="card">
  <div class="card-header">
    User details
  </div>
  <div class="card-body" style="width: 100%;">
    <h1 class="card-title">@Model.FromName.ToUpper()</h1>
    <h3 class="card-title"> £@Model.Balance</h3>
    <h5 class="card-title">@Model.FromAccNum</h5> 
  </div>
</div>

<div class="card">
 <div class="card-header">
   Fund Transfer
  </div>
<div class="card-body" style="width: 100%;">
  <label class="form-label">Amount</label>
  <input type="text" asp-for=Amount class="form-control" />
 </div>
 

 
<div class="card-body" style="width: 100%;">
 <label class="form-label">Currency</label>
 @Html.DropDownList("CurrencyId", currencyData, htmlAttributes: new { @class = "form-control" })
 </div>
 

 <div class="card-body" style="width: 100%;">
 <label class="form-label">Receiver Account Number</label>
 <input type="text" asp-for=ToAccNum class="form-control" />
 </div>

 <div class="card-body" style="width: 100%;">
  <label class="form-label">Remark</label>
  <input type="text" asp-for=Remarks class="form-control" />
 </div>

  <div class="card-body" style="width: 100%;">
 <button type="submit" class="btn btn-primary btn-lg">Send</button>
 </div>
 </div>
 </form>


 
